<!-- input-group/index.wxml -->

<view class='com-class'>
  <view class='combo-more'>
    <input-combo title='{{title}}' type='{{type}}' value='{{value}}' disabled='{{disabled}}' maxlength='{{maxlength}}'
                 focus='{{focus}}' confirm-type='{{confirmType}}' confirm-hold='{{confirmHold}}'
                 cursor='{{cursor}}' selection-start='{{selectionStart}}' selection-end='{{selectionEnd}}'
                 bindinput='onInput' bindfocus="onFocus" bindconfirm='onConfirm' bindkeyboardheightchange='onKeyboardHeightChange' />
    <view class='more' bindtap='onTapMore'>···</view>
  </view>
  <view class='slot' style="{{more ? 'max-height: 1000rpx; transition: max-height ease-in 0.5s' : ''}}">
    <slot />
  </view>
</view>