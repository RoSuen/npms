/* eso-block/index.wxss */

:host {
  display: block;
  padding-top: 40rpx;
}

.title-container {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx 10rpx;
  white-space: nowrap;
}

.title {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(69,90,100,.6);
  overflow: hidden;
  max-width: 65%;
}

.link {
  font-size: 28rpx;
  color:#07c160;
  text-align: right;
  overflow: hidden;
  max-width: 30%;
}

.block {
  padding: 2rpx;
  border-radius: 8rpx;
  background-color: #FFF;
}
